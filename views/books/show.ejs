<%- include('../partials/header') %>
<h2><%= book.title %></h2>
<div>
    <img src="<%= book.coverImagePath %>" height="150" width="100">
    <div>
        <label>Author:</label>
        <%= author.name %>
    </div>
    <div>
        <label>Publish Date:</label>
        <%= book.publishDate.toLocaleString('default', {year: 'numeric', month: 'short', day: 'numeric'}) %>
    </div>
    <div>
        <label>Page Count:</label>
        <%= book.pageCount %>
    </div>
    <div>
        <label>Description:</label>
        <%= book.description %>
    </div>
</div>
<div>
    <a href="/books/<%= book.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm.ejs', 
        { url: `/books/${book.id}` }) 
    %>
    <a href="/authors/<%= author.id %>">View Author</a>
</div>